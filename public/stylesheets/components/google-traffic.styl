.traffic
  width 100%
  height 100%

.traffic__header
  position absolute
  top 2.8vmin
  left 2.8vmin
  right 2.8vmin
  background-color #000
  z-index 1000

.traffic__title
  display inline-block
  margin 0
  padding 10px 0
  padding 2.8vmin 0
  color #fff
  font-size 45px
  font-size 11.5vmin
  font-weight normal

.traffic__last-updated
  float right
  display inline-block
  padding 10px 0
  padding 2.8vmin 0
  color #939393
  text-align right

.traffic__last-updated__text
  display block

.traffic__last-updated__title
  font-size 20px
  font-size 5.3vmin

.traffic__last-updated__value
  font-size 24px
  font-size 6.4vmin

.traffic__map
  height 100%
